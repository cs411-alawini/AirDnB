    <div class="container mt-5">
      <h1>Results for Listing ID: <%= roomId %></h1>
      <div class="card">
        <div class="card-header">Closest Restaurants</div>
        <div class="card-body">
          <% if (restaurants.length > 0) { %>
            <ul>
              <% restaurants.forEach(restaurant => { %>
                <li><%= restaurant.RestaurantName %> - <%= restaurant.Distance.toFixed(2) %> km</li>
              <% }); %>
            </ul>
          <% } else { %>
            <p>No restaurants found.</p>
          <% } %>
        </div>
