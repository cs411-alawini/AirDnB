<!DOCTYPE html>
<html lang="en">
<head>
  <title>AirDnB</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="container mt-4">
    <div class="card">
      <div class="card-body">
        <h1>AirDnB: All in One Platform</h1>
        <h2>Please enter the Listing URL you'd like to search for Restaurants near</h2>
        <form action="mark" method="POST">
          <div class="form-group">
            <label for="URL">Net ID</label>
            <input type="text" class="form-control col-lg-9" id="URL" placeholder="Enter Listing URL" name="URL">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <!-- Button to Load restaurant -->
        <button type="button" class="btn btn-info mt-3" id="loadRestaurantsBtn" data-toggle="modal" data-target="#viewRestaurantsModal">
          View restaurant
        </button>
      </div>
    </div>

    <!-- Modal for Viewing restaurant -->
    <div class="modal fade" id="viewRestaurantsModal" tabindex="-1" role="dialog" aria-labelledby="viewRestaurantsModal" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="viewRestaurantsModal">Restaurants Nearby</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">URL</th>
                  <th scope="col">Restaurant Name</th>
                </tr>
              </thead>
              <tbody id="restaurantBody">
                <!-- restaurant rows will be inserted here -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
  $(document).ready(function() {
    $('#loadRestaurantsBtn').click(function() {
      $.ajax({
        url: '/api/restaurants',
        method: 'GET',
        success: function(data) {
          var rows = '';
          data.forEach(function(restaurant, index) {
            rows += `<tr>
                       <th scope="row">${index + 1}</th>
                       <td>${restaurant.RestaurantName}</td>
                       <td>${restaurant.Address}</td>
                       <td>
                         <button class="btn btn-warning btn-sm" data-URL="${restaurant.URL}">Modify</button>
                         <button class="btn btn-danger btn-sm" data-URL="${restaurant.URL}">Delete</button>
                       </td>
                     </tr>`;
          });
          $('#restaurantBody').html(rows);
        },
        error: function() {
          alert('Failed to load restaurant data.');
        }
      });
    });
  });
  </script>
</body>
</html>
